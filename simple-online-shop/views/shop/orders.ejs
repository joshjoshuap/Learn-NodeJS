<%- include('../layouts/start.ejs') %>
<body>
  <%- include('../layouts/navbar.ejs') %>
  <main>
    <% if (orders.length <= 0) { %>
    <h1>Nothing there!</h1>
    <% } else { %>
    <ul>
      <% orders.forEach(order => { %>
      <li>
        <h1># <%= order._id %></h1>
        <a href="/orders/<%= order._id %>">Invoices</a>

        <ul>
          <% order.products.forEach(p => { %>
          <li><%= p.product.title %> (<%= p.quantity %>) -</li>
          <% }); %>
        </ul>
      </li>
      <% }); %>
    </ul>
    <% } %>
  </main>
</body>
<%- include('../layouts/end.ejs') %>
