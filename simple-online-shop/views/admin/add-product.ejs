<%- include('../layouts/start.ejs') %>
<body>
  <%- include('../layouts/navbar.ejs') %>
  <main>
    <form class="form" action="/admin/add-product" method="post">
      <div>
        <label for="title">Title</label>
        <input class="input_text" type="text" name="title" />
      </div>

      <div>
        <label for="imageUrl">Image Url</label>
        <input class="input_text" type="text" name="imageUrl" id="imageUrl" />
      </div>

      <div>
        <label for="price">Price</label>
        <input
          class="input_text"
          type="number"
          name="price"
          step="0.01"
          id="imageUrl"
        />
      </div>

      <div>
        <label for="description">Description</label>
        <textarea
          type="text"
          name="description"
          id="imageUrl"
          rows="5"
        ></textarea>
      </div>

      <button type="submit">Add Product</button>
    </form>
  </main>
</body>
<%- include('../layouts/end.ejs') %>
